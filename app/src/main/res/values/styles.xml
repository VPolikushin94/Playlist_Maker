<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/main_buttons_text_size</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/setting_screen_padding_start</item>
        <item name="android:paddingEnd">@dimen/setting_screen_padding_end</item>
        <item name="android:paddingTop">@dimen/settings_buttons_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/settings_buttons_horizontal_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/settings_buttons_text_size</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/setting_buttons_icon</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="LinearLayoutBackButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ImageBackButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_back_arrow</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="tint">?attr/colorOnSecondary</item>
        <item name="android:contentDescription">@string/back_button</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TextBackButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/settings_header_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="TVHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_main_top_header</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/main_header_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="UnderTrackNameTextStyle">
        <item name="android:textColor">@color/search_under_track_name_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchTVStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="SearchButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="iconPadding">0dp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
</resources>