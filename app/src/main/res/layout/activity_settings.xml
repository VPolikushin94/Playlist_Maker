<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="12dp">

    <Button style="@style/BackButtonStyle"
        android:id="@+id/button_settings_back"
        android:text="@string/settings"
        android:layout_marginBottom="40dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/dark_theme"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/settings_buttons_text_size"
            android:fontFamily="@font/ys_display_regular"
            />
        <androidx.appcompat.widget.SwitchCompat
            style="@style/SwitchCompatStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="21dp"
            android:paddingBottom="21dp"
            android:layout_gravity="end"
            />
    </FrameLayout>

    <Button style="@style/SettingsButtonsStyle"
        android:id="@+id/button_share"
        android:text="@string/share"
        app:icon="@drawable/ic_share"/>

    <Button style="@style/SettingsButtonsStyle"
        android:id="@+id/button_support"
        android:text="@string/support"
        app:icon="@drawable/ic_support"/>

    <Button style="@style/SettingsButtonsStyle"
        android:id="@+id/button_licence"
        android:text="@string/license"
        app:icon="@drawable/ic_arrow_forward"/>

</LinearLayout>