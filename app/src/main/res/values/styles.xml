<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/setting_screen_padding_start</item>
        <item name="android:paddingEnd">@dimen/setting_screen_padding_end</item>
        <item name="android:paddingTop">@dimen/settings_buttons_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/settings_buttons_horizontal_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/settings_buttons_text_size</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/setting_buttons_icon</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="LinearLayoutBackButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ImageBackButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_back_arrow</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="tint">?attr/colorOnSecondary</item>
        <item name="android:contentDescription">@string/back_button</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TextHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/settings_header_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="TVHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_main_top_header</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/main_header_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="UnderTrackNameTextStyle">
        <item name="android:textColor">@color/search_under_track_name_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchTVStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="SearchButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="iconPadding">0dp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="PlayerGuidelineStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PlayerInfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/player_info_text_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PlayerTrackInfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PlayerTrackTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerSmallButtonStyle">
        <item name="android:layout_width">@dimen/add_playlist_button_size</item>
        <item name="android:layout_height">@dimen/add_playlist_button_size</item>
        <item name="android:background">@drawable/player_button_background</item>
    </style>

    <style name="BottomNavigationViewStyle">
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextColor">@color/bottom_nav_item</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/bottom_nav_text_size</item>
    </style>

    <style name="PlaylistCreatorTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_text_border</item>
        <item name="hintTextColor">@color/edit_text_border_color_selected</item>
        <item name="boxStrokeWidthFocused">@dimen/edit_text_stroke_width</item>
        <item name="boxStrokeWidth">@dimen/edit_text_stroke_width</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_border_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_border_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_border_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_border_radius</item>
    </style>

    <style name="PlaylistCreatorEditText">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">19dp</item>
        <item name="android:paddingStart">@dimen/playlist_creator_edit_text_horizontal_padding
        </item>
        <item name="android:paddingEnd">@dimen/playlist_creator_edit_text_horizontal_padding</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MySnackbarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="MySnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">?attr/colorOnSecondary</item>
    </style>

    <style name="MyAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/alert_dialog_negative_button</item>
    </style>
</resources>