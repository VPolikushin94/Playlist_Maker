<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.library.LibraryActivity">

    <LinearLayout style="@style/LinearLayoutBackButtonStyle">

        <ImageButton
            android:id="@+id/button_library_back"
            style="@style/ImageBackButtonStyle"
            android:contentDescription="@string/library" />

        <TextView
            style="@style/TextBackButtonStyle"
            android:text="@string/library" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="@dimen/library_tab_text_size"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabIndicatorColor="?attr/colorOnSecondary"
        app:tabPaddingBottom="@dimen/library_tab_padding"
        app:tabPaddingTop="@dimen/library_tab_padding"
        app:tabIndicatorHeight="2dp"
        app:tabTextColor="?attr/colorOnSecondary" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_library"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>