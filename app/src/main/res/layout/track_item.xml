<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="13dp"
    android:paddingEnd="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="horizontal"
    android:gravity="start">

    <ImageView
        android:id="@+id/iv_track_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_placeholder"
        android:contentDescription="@string/track_image_description" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_song_name"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="16sp"
            android:fontFamily="@font/ys_display_regular"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="1dp"
            android:maxLines="1"
            android:ellipsize="end"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">
            <TextView
                style="@style/UnderTrackNameTextStyle"
                android:id="@+id/tv_artist_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/test_band_name"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_ellipse"
                android:layout_gravity="center_vertical"
                app:tint="@color/search_under_track_name_text"
                android:contentDescription="@null" />
            <TextView
                style="@style/UnderTrackNameTextStyle"
                android:id="@+id/tv_track_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_track_time"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/info_arrow_description"/>
</LinearLayout>