<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="8dp"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_playlist_item_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/ic_song_placeholder"
        android:contentDescription="@string/playlist_image"/>

    <TextView
        android:id="@+id/tv_playlist_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSecondary"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Best songs 2021Best songs 2021Best songs 2021"/>

    <TextView
        android:id="@+id/tv_playlist_item_tracks_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSecondary"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="98 треков"/>

</LinearLayout>