<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/blue"
    android:orientation="vertical"
    android:paddingStart="17dp"
    android:paddingEnd="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_main_top_header"
        android:fontFamily="sans-serif-medium"
        android:text="@string/playlist_maker"
        android:textColor="@color/white"
        android:textSize="@dimen/main_header_text_size" />

    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/search"
        android:textColor="@color/black"
        android:textSize="@dimen/main_buttons_text_size"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_search"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/black"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/button_library"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/library"
        android:textColor="@color/black"
        android:textSize="@dimen/main_buttons_text_size"
        app:icon="@drawable/ic_library"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/black"
        app:cornerRadius="16dp"
        android:layout_marginTop="@dimen/margin_main_buttons_top"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/settings"
        android:textColor="@color/black"
        android:textSize="@dimen/main_buttons_text_size"
        app:icon="@drawable/ic_settings"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/black"
        app:cornerRadius="16dp"
        android:layout_marginTop="@dimen/margin_main_buttons_top"
        android:layout_marginBottom="28dp"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_gravity="center"
        />


</LinearLayout>